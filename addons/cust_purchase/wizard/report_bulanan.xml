<odoo>
    <record id="view_monthly_purchase_report_xlsx_form" model="ir.ui.view">
        <field name="name">monthly.purchase.report.xlsx.form</field>
        <field name="model">monthly.purchase.report.xlsx</field>
        <field name="arch" type="xml">
            <form string="Generate Monthly Purchase Report">
                <group>
                    <field name="report_month"/>
                </group>
                <footer>
                    <button name="generate_xlsx_report" string="Download Report" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_monthly_purchase_report_xlsx" model="ir.actions.act_window">
        <field name="name">Monthly Purchase Report</field>
        <field name="res_model">monthly.purchase.report.xlsx</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    
    <menuitem id="menu_monthly_purchase_report_xlsx" name="Laporan Pengeluaran Bulanan" parent="purchase.purchase_report_main" action="action_monthly_purchase_report_xlsx" sequence="6"/>
</odoo>
